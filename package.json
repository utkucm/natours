{
  "name": "natours",
  "version": "1.0.0",
  "description": "Nature tours booking project with NodeJS, Express",
  "main": "app.js",
  "scripts": {
    "start": "cd src && node server.js",
    "start:dev": "cd src && nodemon server.js",
    "start:prod": "cd src && set NODE_ENV=production&& nodemon server.js",
    "debug": "cd src && ndb server.js",
    "watch:js": "parcel watch ./src/public/js/index.js --out-dir ./src/public/js --out-file bundle.js",
    "build:js": "parcel build ./src/public/js/index.js --out-dir ./src/public/js --out-file bundle.js"
  },
  "keywords": [
    "Node",
    "Express",
    "MongoDB"
  ],
  "author": "Utku Ã‡am",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.1.1",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.10",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.6",
    "pug": "^3.0.1",
    "sharp": "^0.25.3",
    "slugify": "^1.4.0",
    "stripe": "^8.56.0",
    "validator": "^13.0.0",
    "xss-clean": "^0.1.1",
    "node-forge": "^0.10.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5"
  },
